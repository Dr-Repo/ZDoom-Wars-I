	Stop
  Death.StrifeConvert2:
	DRON A 0 A_UnsetSolid
    DRON A 0 A_SpawnItemEx("StrifeDrone")
	Stop
  Pain.ChexConvert:
	DRON A 0 A_Die("ChexConvert")
	Stop
  Death.ChexConvert:
    DRON A 0 A_UnsetSolid
	DRON A 0 A_JumpIf(ACS_ExecuteWithResult(130,3)==1, "Death.ChexConvert2")
