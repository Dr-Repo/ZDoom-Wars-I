//Vanilla Drone
ACTOR Drone
{
  Health 45
  Mass 50
  Height 16
  Radius 16
  Speed 18
  Minmissilechance 235
  Damagefactor "Sniper", 1.5
  Damagefactor "Suppression2", 1.3
  Seesound "drone/sight"
  Painsound "drone/pain"
  Deathsound "drone/death"
  Activesound ""
  Painchance 255
  Painchance "VirusRemoverVanilla", 255
  Painchance "DOOMConvert", 255
  Painchance "HERETICConvert", 255
  Painchance "HEXENConvert", 255
  Painchance "STRIFEConvert", 255
  Painchance "CHEXConvert", 255
  Painchance "VIRUSConvert", 255
  Painchance "REDConvert", 255
  Painchance "BLUEConvert", 255
  Painchance "GREENConvert", 255
  Painchance "YELLOWConvert", 255
  Painchance "SILVERConvert", 255
  Painchance "VirusTeleporterVanilla", 255
  Painchance "Revived", 255
  MONSTER
  +NOGRAVITY
  +PUSHABLE
  +MISSILEMORE
  +QUICKTORETALIATE
  +FLOAT
  +NOLIFTDROP
  +DONTGIB
  -COUNTKILL
  +NOBLOODDECALS
  Bloodtype bulletpuffed
  Dropitem ""
  Obituary "%o somehow managed to be downed by a Drone."
  States
  {
  Spawn:
    DRON AA 2 A_Look
    goto See
  See:
    DRON A 0 A_JumpIfTargetinLOS(2, 140)
    DRON A 0 A_Jump(25, "Giveup")
    DRON AAAAAAAAAAAAA 4 A_Chase
    DRON A 4 A_PlaySound("drone/idle")
    loop
  Idle:
    DRON A 0 A_LookEx(0, 0, 0, 0, 360, "See")
	DRON AAAAA 4 A_Wander
	DRON A 0 A_LookEx(0, 0, 0, 0, 360, "See")
	loop
  Giveup:
    DRON A 0 A_ClearTarget
    goto See
  Missile:
    DRON B 6 A_FaceTarget
    DRON C 7 Bright A_CustomMissile("DroneShot", 5, 0, 0, 0)
    goto see
  Pain:
    DRON A 4 A_Pain
    goto see
  Death:
    DRON D 6 Bright A_SpawnItemEx("DroneBit", 0, 0, 10, random(2,4), random(2,4), random(3,5), random(0,360), 128) 
    DRON E 6 Bright A_Scream
    DRON F 6 Bright A_NoBlocking
    DRON GH 6 Bright
	DRON I 0 A_JumpIfInventory("Revived", 1, "Death2")
    DRON I -1 
    stop
  XDeath:
    DRON D 6 Bright 
    DRON E 6 Bright A_Scream
    DRON F 6 Bright A_NoBlocking
	EXPL B 8 Bright A_Playsound("explosion")
	EXPL C 6 Bright A_NoBlocking
	EXPL D 4 Bright
	stop
  Raise:
    DRON IHGFED 6
	DRON A 10
    goto See
  Death2:
	DRON I 3 A_FadeOut(0.1)
    loop
  Pain.Revived:
	DRON A 0 A_GiveInventory("Revived", 1)
	goto See
  Pain.DOOMConvert:
	DRON A 0 A_Die("DOOMConvert")
	Stop
  Death.DOOMConvert:
    DRON A 0 A_UnsetSolid
	DRON A 0 A_JumpIf(ACS_ExecuteWithResult(130,3)==1, "Death.DoomConvert2")
    DRON A 0 A_SpawnItemEx("DoomDrone",0,0,0,0,0,0,0,SXF_SETMASTER)
	TNT1 A 35
	DRON A 0 A_DamageChildren(1, "Revived")
	Stop
  Death.DoomConvert2:
	DRON A 0 A_UnsetSolid
    DRON A 0 A_SpawnItemEx("DoomDrone")
	Stop
  Pain.HereticConvert:
	DRON A 0 A_Die("HereticConvert")
	Stop
  Death.HereticConvert:
    DRON A 0 A_UnsetSolid
	DRON A 0 A_JumpIf(ACS_ExecuteWithResult(130,3)==1, "Death.HereticConvert2")
    DRON A 0 A_SpawnItemEx("HereticDrone",0,0,0,0,0,0,0,SXF_SETMASTER)
	TNT1 A 35
	DRON A 0 A_DamageChildren(1, "Revived")
	Stop
  Death.HereticConvert2:
	DRON A 0 A_UnsetSolid
    DRON A 0 A_SpawnItemEx("HereticDrone")
	Stop
  Pain.HexenConvert:
	DRON A 0 A_Die("HexenConvert")
	Stop
  Death.HexenConvert:
    DRON A 0 A_UnsetSolid
	DRON A 0 A_JumpIf(ACS_ExecuteWithResult(130,3)==1, "Death.HexenConvert2")
    DRON A 0 A_SpawnItemEx("HexenDrone",0,0,0,0,0,0,0,SXF_SETMASTER)
	TNT1 A 35
	DRON A 0 A_DamageChildren(1, "Revived")
	Stop
  Death.HexenConvert2:
	DRON A 0 A_UnsetSolid
    DRON A 0 A_SpawnItemEx("HexenDrone")
	Stop
  Pain.StrifeConvert:
	DRON A 0 A_Die("StrifeConvert")
	Stop
  Death.StrifeConvert:
    DRON A 0 A_UnsetSolid
	DRON A 0 A_JumpIf(ACS_ExecuteWithResult(130,3)==1, "Death.StrifeConvert2")
    DRON A 0 A_SpawnItemEx("StrifeDrone",0,0,0,0,0,0,0,SXF_SETMASTER)
	TNT1 A 35
