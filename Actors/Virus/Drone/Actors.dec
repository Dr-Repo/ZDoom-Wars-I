	DRON A 0 A_JumpIf(ACS_ExecuteWithResult(130,3)==1, "Death.VirusConvert2")
    DRON A 0 A_SpawnItemEx("Drone",0,0,0,0,0,0,0,SXF_SETMASTER)
	TNT1 A 35
	DRON A 0 A_DamageChildren(1, "Revived")
