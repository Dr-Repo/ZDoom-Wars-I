	goto AfterSummon
  GreenDeath:
	GHEX A 1 A_SpawnItemEx(GreenMill2,0,0,0,0,0,0,0,SXF_ABSOLUTEVELOCITY | SXF_CLEARCALLERTID | SXF_TRANSFERPOINTERS)   
