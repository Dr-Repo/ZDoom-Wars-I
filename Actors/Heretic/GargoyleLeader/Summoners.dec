//Gargoyle Leader Summoner
ACTOR GargoyleleaderSummoner : Shotgun
{
   +AMMO_OPTIONAL
   +WEAPON.NOAUTOAIM
   +WEAPON.NO_AUTO_SWITCH
   Weapon.AmmoGive 0
   Weapon.AmmoUse 0
   Weapon.AmmoType "Mana"
   Weapon.AmmoType2 "Heromana"
   Obituary "%o fell to %k's forces."
   Tag "Gargoyle Leader Summoner"
   States
   {
   Spawn:
	TNT1 A -1
	loop
   Ready:
	FGAR A 0 ACS_NamedExecuteAlways("MonsterMessages", 0, 2, 1)
	Goto Set
   Set:
    FGAR A 0 A_JumpIfInventory("MonsterRemover", 1, "UnitRemover") 
	FGAR A 1 A_WeaponReady
	loop
   Deselect:
	FGAR A 1 A_Lower
	loop
   Select:
	FGAR A 1 A_Raise
	loop
   Fire:
	STFF A 0 A_JumpIfInventory ("Mana", 2, 2)
	STFF A 3 ACS_NamedExecuteAlways("MonsterMessages", 0, 100, 0)
	Goto Set
	STFF A 6
	STFF B 2
	STFF C 2 A_PlaysoundEx("summon","Weapon")
	STFF C 0 A_TakeInventory("Mana", 2)
	goto Summon
   Summon:
	STFF C 4 A_FireCustomMissile("FgargSummonball", 0, 1, 0, 8, 0)
	STFF C 0 A_JumpIfInventory("Knightsunlocked", 1, 3)
	STFF C 0 A_GiveInventory("Fgargoyles", 1)
	STFF C 0 A_JumpIfInventory("Fgargoyles", 10, "Unlock")
	STFF BA 2
	goto Set
   Unlock:
	STFF C 0 A_Playsound("Unlock", CHAN_AUTO)
	STFF C 0 ACS_NamedExecuteAlways("MonsterMessages", 0, 8, 4, 1)
	STFF C 0 A_GiveInventory("Knightsunlocked", 1)
	STFF C 0 A_GiveInventory("Undeadknightsummoner", 1)
	STFF BA 2
	goto Set
   Altfire:
	STFF A 0 A_JumpIfInventory("Ghostitem", 1, 1)
	Goto Set
	STFF A 0 A_JumpIfInventory("Mana", 4, 2)
	STFF A 3 ACS_NamedExecuteAlways("MonsterMessages", 0, 100, 0)
	Goto Set
	STFF A 12
	STFF B 4
	STFF C 2 A_PlaysoundEx("Summon","Weapon")
	STFF C 0 A_TakeInventory("Mana", 4)
	goto Summon2
   Summon2:
	STFF C 4 A_FireCustomMissile("GhostfgargSummonball",0,1,0,8,0)
	STFF BA 2
	goto Set
  UnitRemover:
	STFF D 0 A_PlaySound("misc/swish", 3)
	STFF DEFG 1
	goto Removed
  Removed:
	STFF H 0 A_JumpIfInventory ("VanillaItem", 1, "VanillaRemoved")
	STFF H 0 A_JumpIfInventory ("BlueItem", 1, "BlueRemoved")
	STFF H 0 A_JumpIfInventory ("GreenItem", 1, "GreenRemoved")
	STFF H 0 A_JumpIfInventory ("RedItem", 1, "RedRemoved")
	STFF H 0 A_JumpIfInventory ("SilverItem", 1, "SilverRemoved")
	STFF H 0 A_JumpIfInventory ("YellowItem", 1, "YellowRemoved")
	STFF H 0 A_JumpIfInventory ("DRItem", 1, "RedRemoved")
	STFF H 0 A_JumpIfInventory ("DBItem", 1, "BlueRemoved")
	STFF H 0 A_JumpIfInventory ("DGItem", 1, "GreenRemoved")
	STFF H 0 A_JumpIfInventory ("DSItem", 1, "SilverRemoved")
	goto VanillaRemoved
  VanillaRemoved:
	STFF H 3 A_FireCustomMissile("HereticRemover")
	STFF H 0 A_TakeInventory("MonsterRemover",1)
	goto AfterRemoved
  BlueRemoved:
	STFF H 3 A_FireCustomMissile("BlueHereticRemover")
	STFF H 0 A_TakeInventory("MonsterRemover",1)
	goto AfterRemoved
  GreenRemoved:
	STFF H 3 A_FireCustomMissile("GreenHereticRemover")
	STFF H 0 A_TakeInventory("MonsterRemover",1)
	goto AfterRemoved
  RedRemoved:
	STFF H 3 A_FireCustomMissile("RedHereticRemover")
	STFF H 0 A_TakeInventory("MonsterRemover",1)
	goto AfterRemoved
  SilverRemoved:
	STFF H 3 A_FireCustomMissile("SilverHereticRemover")
	STFF H 0 A_TakeInventory("MonsterRemover",1)
	goto AfterRemoved
  YellowRemoved:
	STFF H 3 A_FireCustomMissile("YellowHereticRemover")
	STFF H 0 A_TakeInventory("MonsterRemover",1)
	goto AfterRemoved
  AfterRemoved:
	STFF G 2
	STFF F 3 A_TakeInventory("MonsterRemover",1)
	goto Set
   }
}

//Vanilla Gargoyle Leader Summonball
