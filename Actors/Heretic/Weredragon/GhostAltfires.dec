	goto ReimburseCheck
  DSDeath:
	SSEX A 1 A_SpawnItemEx(DSGhostZBeast,0,0,0,0,0,0,0,SXF_ABSOLUTEVELOCITY | SXF_CLEARCALLERTID | SXF_TRANSFERPOINTERS)   
	SSEX BCDE 1
	goto ReimburseCheck
  ReimburseSuccess:
	TNT1 A 0 A_GiveToTarget("Mana",ACS_ExecuteWithResult(104,1,2,21))
	TNT1 A 0 A_GiveToTarget("HeroMana",ACS_ExecuteWithResult(104,1,2,8))
	stop
   }
}

