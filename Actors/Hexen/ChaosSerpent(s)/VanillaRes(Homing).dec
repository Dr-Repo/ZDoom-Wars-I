//Chex Homing Serpent
ACTOR ChexZDemon12 : ZDemon12
{
  Painchance "Heal", 0
  Painchance "HexenRemoverVanilla", 0
  Painchance "ChexRemoverVanilla", 255
  Painchance "HexenTeleporterVanilla", 0
  Painchance "ChexTeleporterVanilla", 255
  Translation "64:79=16:47", "236:239=40:47", "1:2=0:0", "144:151=19:27", "128:143=19:21", "48:63=18:18", "160:167=16:23"
  States
  {
  Pain.ChexRemoverVanilla:
	DEM2 A 0 A_Die("ChexRemoverVanilla")
	Stop
  Death.ChexRemoverVanilla:
	DEM2 A 0 A_UnsetSolid
	DEM2 A 0 A_SpawnItemEx("ChexTelefog")
	DEM2 A 0 A_SpawnItem ("PinkMana")
	DEM2 A 0 A_SpawnItem ("PinkHeroMana")
	Stop
  Pain.ChexTeleporterVanilla:
	DEM2 A 0 A_GiveInventory("TeleportCount",1)
	DEM2 A 0 HealThing(1)
	DEM2 A 0 A_JumpIfInventory("TeleportCount", ACS_ExecuteWithResult(118,0,4,0), "See")
	DEM2 A 0 Teleport(2024,0,0)
	goto See
  }
}

